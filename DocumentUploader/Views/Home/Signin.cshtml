@model DocumentUploader.Models.User

@{
    ViewData["Title"] = "Signin";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<h2>@ViewData["Title"]</h2>
<h3 style="color:red">@ViewData["Message"]</h3>

<div class="login-container">
    <div id="login" class="span3 well well-large offset4">
        <h4>Account Panel</h4>
        <form asp-controller="User" asp-action="RegisterUser" method="post" class="form">
            <input asp-for="Email" type="text" placeholder="Email" />
            <input asp-for="Password" type="password" placeholder="Password" />
            <input asp-for="AccountId" type="text" placeholder="Account Number" />
            <label class="checkbox" for="rememberme">
                <input type="checkbox" /> Remember me
            </label> <br />
            <input class="btn btn-success" type="submit" value="Signin" /> or <a class="btn" href="#">Sign in</a>
        </form>
    </div>
</div>